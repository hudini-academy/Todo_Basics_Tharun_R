<html>
<head>
    <title>Tasks</title>
    <link rel="stylesheet" href='/static/css/main.css'>
    <link href='https://fonts.googleapis.com/css?family=Poppins' rel='stylesheet'>
</head>
<body>
    <headers>
        <div id="logout-button">
            {{if .Flash}}
                <div class="flash-message">
                    {{.Flash}}
                </div>
            {{end}}
            <button><a href="/logout"> LOGOUT </a></button>
        </div>
        <div>
            <h2>Todo Task</h2>
        </div>
    </headers>
    
    <form method="POST" action="/tasks" class="main-form">
        <input type="text" style="font-size: 30px" name="task" required></textarea>
        <input type="submit" >
    </form>
    <ol>
        {{range .Tasks}}
            <li>
               
                <div class="item-container">
                    <h2>{{.Title}}</h2>
                    <p>Created: {{.Created}}<br> Expires: {{.Expires}}</p>

                    <form method="POST" action="/update?id={{.Id}}" class="updateForm">
                        <input type="text" name="update">
                        <input type="submit" value="Update">
                    </form>

                    <form class="deleteForm" action="/delete?id={{.Id}}" method="POST">
                        <input type="submit" value="Delete">
                    </form>
                </div>
            </li>
        {{end}}
</ol>
</body>
</html>